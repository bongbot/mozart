.section
  = f.hidden_field :klass_name

  %table{:style => 'width:auto;'}
    %tr
      %td
        .mz-label.top.req= t(:label) + ":"
        = f.text_field :label
      %td= spacer
      %td
        .mz-label.top
          =t(:restrict_by_tag)
          %small= t(:restrict_by_tag_info, :assets => t(f.object.klass_name.downcase.pluralize))
        = f.select :tag_id, Tag.all.map { |tag| [tag.name, tag.id] }, :include_blank => true
