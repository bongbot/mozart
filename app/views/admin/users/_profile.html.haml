- edit ||= false
.section
  %table
    %tr
      %td
        .mz-label.top.req #{t :username}:
        = f.text_field :username
      %td= spacer
      %td
        .mz-label.top.req #{t :email}:
        = f.text_field :email
    %tr
      %td
        .mz-label #{t :password}:
        = f.password_field :password
      %td= spacer
      %td
        .mz-label #{t :password_confirmation}:
        = f.password_field :password_confirmation
    %tr
      %td(colspan=3)
        .check_box(style="margin-top:6px")
          -# Sorry, you can't revoke Admin rights from yourself.
          = f.check_box(:admin, { :disabled => edit && @user == current_user })
          %label{:for => 'user_admin'}
            = t(:user_is_admin)

.subtitle #{t :personal_information}
.section
  %table
    %tr
      %td
        .mz-label #{t :first_name}:
        = f.text_field :first_name
      %td= spacer
      %td
        .mz-label #{t :last_name}:
        = f.text_field :last_name
    %tr
      %td
        .mz-label #{t :job_title}:
        = f.text_field :title
      %td= spacer
      %td
        .mz-label #{t :company}:
        = f.text_field :company

.subtitle #{t :group_memberships}
.section
  %table
    %tr
      %td
        .mz-label #{t :groups}:
        = f.select :group_ids, Group.all.map {|g| [g.name, g.id]}, {}, :multiple => true, :class => 'select2'
