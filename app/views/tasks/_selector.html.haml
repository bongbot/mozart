.btn-group{:role => "group"}
  %button{:type => "button" , :class => "btn btn-default btn-secondary " + (@view == "pending" ? "active" : ""), :onclick => %Q(document.location.href='#{tasks_path}') }
    = t :pending_tab
  %button{:type => "button" , :class => "btn btn-default btn-secondary " + (@view == "assigned" ? "active" : ""), :onclick => %Q(document.location.href='#{url_for(:action => :index, :view => "assigned")}') }
    = t :assigned_tab
  %button{:type => "button" , :class => "btn btn-default btn-secondary " + (@view == "completed" ? "active" : ""), :onclick => %Q(document.location.href='#{url_for(:action => :index, :view => "completed")}') }
    = t :completed_tab
