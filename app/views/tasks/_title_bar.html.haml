- edit ||= false
- model ||= {}
- lead = model

- if is_new?(lead)
  .title_tools#menu
  .title#title
    = t :create_task
- else
  #confirm{ hidden }
  .title_tools#menu
    = link_to_inline(:edit_lead, edit_lead_path(lead), :text => t(:edit), :edit => edit, "data-kind" => "edit") + " | "
    = link_to_function(t(:delete) + '?', confirm_delete(lead))
  .title_tools#buttons
    = view_buttons
  .title#title
    = h(lead.full_name)
    = image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;")

  %div#convert_lead{ hidden }
