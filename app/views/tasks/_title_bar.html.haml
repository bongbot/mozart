- edit ||= false
- model ||= {}
- task = model

- if is_new?(task)
  .title_tools#menu
  .title#title
    = t :create_task
    - if previous_path?
      = render "shared/save_and_back"

  .buttonbar{:id => "buttonbar-submit"}
    - if is_new
      = f.submit t :create_task
    - else
      = f.submit t :save_task

      = link_to_cancel edit_task_path(@task)

- else
  #confirm{ hidden }
  .title_tools#menu
    = link_to_inline(:edit_task, edit_task_path(task), :text => t(:edit), :edit => edit, "data-kind" => "edit") + " | "
    = link_to_function(t(:delete) + '?', confirm_delete(task))
  .title_tools#buttons
    = view_buttons
  .title#title
    = h(task.name)
    = image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;")

  %div#convert_task{ hidden }
