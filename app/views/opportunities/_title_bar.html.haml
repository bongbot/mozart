- edit ||= false
- model ||= {}
- opportunity = model

- if is_new?(opportunity)
  .title_tools#menu
  .title#title
    = t :create_opportunity

  - if previous_path?
    = render "shared/save_and_back"

- else
  #confirm{ hidden }
  .title_tools#menu
    = link_to_inline(:edit_opportunity, edit_opportunity_path(opportunity), :text => t(:edit), :edit => edit, "data-kind" => "edit") + " | "
    = link_to_function(t(:delete) + '?', confirm_delete(@opportunity))
  .title_tools#buttons
    = view_buttons
  .title#edit_opportunity_title
    = h(@opportunity.name)
    = image_tag("loading.gif", :size => :thumb, :id => "loading", :style => "display: none;")

