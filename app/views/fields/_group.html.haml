- edit ||= false

- if field_group.name != 'custom_fields'
  -# start a new section
  %div{ :id => "#{field_group.key}_container", :"data-tag" => field_group.tag.try(:name) }
    = section_title t(field_group.name, :default => field_group.label)
    %div[field_group]
      = render :partial => 'fields/group_table', :locals => {:f => f, :field_group => field_group, :edit => edit}
- else
  = render :partial => 'fields/group_table', :locals => {:f => f, :field_group => field_group, :edit => edit}

:css
  label.mz{
    color: grey;

    display: inline-block;
    padding: .25em .4em;
    font-size: 14px;
    font-weight: bold;
    line-height: 1;
    text-align: right;
    white-space: nowrap;
    vertical-align: baseline;
    @include border-radius();

    width: 170px;
  }